<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObsControlMobile.Views.DataPage"
             xmlns:vm="clr-namespace:ObsControlMobile.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:DataViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>

        <StackLayout>
            <Image Source="{Binding AllSkyURL}" HorizontalOptions="Center" VerticalOptions="Center" />
            <Label Text="{Binding AllSkyDate}" HorizontalOptions="Center" />
            <!-- 
            <Button Margin="0,10,0,0" Text="Refresh" Command="{Binding RefreshAllSkyCommand}" BackgroundColor="{StaticResource Primary}" TextColor="White" />
            -->
            <Label Text="{Binding SunsetTimeSt}" />
            <Label Text="{Binding CivTwilightEndTimeSt}" />
            <Label Text="{Binding NavTwilightEndTimeSt}" />
            <Label Text="{Binding AstroTwilightEndTimeSt}" />
            <Label Text="{Binding AstroTwilightBegTimeSt}" />
            <Label Text="{Binding NavTwilightBegTimeSt}" />
            <Label Text="{Binding CivTwilightBegTimeSt}" />
            <Label Text="{Binding SunriseTimeSt}" />
        </StackLayout>
    
    </ContentPage.Content>


</ContentPage>